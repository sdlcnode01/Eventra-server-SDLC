<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />

        <!-- title -->
        <title>UserLists</title>

        <!-- font awesome cdn -->
        <link
            rel="stylesheet"
            href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css"
        />
        <link
            rel="stylesheet"
            href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/brands.min.css"
        />
        <link
            rel="stylesheet"
            href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/fontawesome.min.css"
        />
        <link rel="stylesheet"
        href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/regular.min.css"">
        <link
            rel="stylesheet"
            href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/solid.min.css"
        />

        <!-- bootstrap css -->
        <link
            rel="stylesheet"
            href="/bootstrap-5.3.5-dist/css/bootstrap.min.css"
        />

        <link rel="stylesheet" href="/css/users-list.css" />
    </head>
    <body>
        <main>
            <div class="container">
                <div class="row flex-nowrap">
                    <!-- sidebar -->
                              <%- include('./layout/sidebar') %>

                    <div class="col py-4 main">
                        <div class="content container">
                            <div class="mb-3">
                                <h4>Users List</h4>
                            </div>
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th class="px-5">Name</th>
                                        <th>Joined At</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <!-- Row 1 -->
                                    <!-- <tr>
                    <td class="d-flex align-items-center">
                      <img
                        src="/image/user-img.png"
                        class="rounded-circle me-3"
                        width="40"
                        height="40"
                        alt="avatar"
                      />
                      Shakti Sharma
                    </td>
                    <td>10.05.2024</td>
                    <td><button class="details-btn">Details</button></td>
                  </tr> -->

                                    <% userlists.forEach((user) => {
                                    %>
                                    <tr>
                                        <td class="d-flex align-items-center">
                                            <img
                                                src="http://localhost:3005/<%= user.image %>"
                                                class="rounded-circle me-3"
                                                width="40"
                                                height="40"
                                                alt="avatar"
                                            />
                                            <%= user.first_name %>
                                            <%= user.last_name %>
                                        </td>
                                        <td>
                                            <%= new
                                            Date(user.createdAt).toISOString().slice(0,
                                            10) %>
                                        </td>
                                        <td>
                                            <a href="/admin/userdetails/<%=user._id%>">
                                                <button class="details-btn">
                                                    Details
                                                </button>
                                            </a>
                                        </td>
                                    </tr>
                                    <% }) %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </main>
        <!-- bootstrap icon -->
        <link
            rel="stylesheet"
            href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css"
        />

        <!-- popper js cdn -->
        <script
            src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
            integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
            crossorigin="anonymous"
        ></script>

        <!-- Bootstrap js cdn -->
        <script src="/bootstrap-5.3.5-dist/js/bootstrap.min.js"></script>
    </body>
</html>
